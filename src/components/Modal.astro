---
import { Icon } from "astro-icon/components";
import Title from "./Title.astro";
const { title, modalId } = Astro.props;
---

<div id={modalId} class="modal">
  <div class="modal-container scroll-smooth">
    <div class="laptop:space-y-7">
      <div class="modal-title">
        <Title text={title} shadowClass="!left-10" />
        <Icon
          id={`${modalId}-close`}
          name="ic:round-close"
          class="text-off-white/60 hover:text-star/80 absolute top-6 right-8 h-8 w-8 cursor-pointer transition-all duration-500 ease-out"
        />
      </div>
      <div class="modal-content laptop:space-y-5 laptop:mb-20 mb-10 space-y-3">
        <slot />
      </div>
    </div>
  </div>
</div>

<style is:global lang="scss">
  .modal {
    z-index: -5;
    pointer-events: none;
    width: 100vw;
    height: 100dvh;
    position: fixed;
    top: 0;
    left: 0;
    transition: 0.3s all ease-out;
    opacity: 0;
    display: flex;
    justify-content: center;

    &::after {
      content: "";
      background-color: var(--color-blacki);
      opacity: 0.7;
      width: 100%;
      height: 100%;
    }

    .modal-container {
      position: absolute;
      z-index: 10;
      background-color: var(--color-blacki);
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
      width: 100%;
      max-width: 70rem;
      height: auto;
      max-height: 80dvh;
      border: 1px solid rgba(250, 249, 246, 0.2);
      border-bottom: 0;
      bottom: 0;
      transform: translateY(100%);
      transform-origin: top;
      transition: 0.4s all ease-in-out;
      // padding: 0 2rem;
      padding: 0;
      overflow-y: auto;
      opacity: 0;
      overflow-x: hidden;
      @media (width < 1024px) {
        // padding: 0 1.25rem;
        max-height: 85dvh;
      }

      .modal-title {
        position: sticky;
        top: 0;
        background: var(--color-blacki);
        z-index: 10;
        // padding-bottom: 3rem;
        // padding-top: 1rem;
        margin-bottom: 0.5rem;
        padding: 1rem 2rem 3rem;
      }

      .modal-content {
        padding: 0 2rem;
      }
    }
  }
  .modal-open {
    z-index: 99;
    opacity: 1;
    pointer-events: auto;

    .modal-container {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
