---
import "@/styles/main.css";
import Navbar from "@/components/v2/Navbar.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";
import Footer from "@/components/v2/Footer.astro";
import MenuMobile from "@/components/v2/Menu/MenuMobile.astro";
const { title = "Mhd Afif" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
      rel="stylesheet"
    />

    <script>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body
    class="dark:bg-blacki bg-off-white text-black transition-all dark:text-off-white"
  >
    <main
      class="laptop:p-6 relative container mx-auto flex min-h-dvh max-w-7xl flex-col px-6 pt-6 pb-24"
    >
      <div class="w-full">
        <div class="space-y-7">
          <Navbar />
          <slot />
          <Footer />
        </div>
      </div>

      <ScrollToTop isOnePage={false} />
    </main>

    <!-- <div
      class="block laptop:hidden fixed right-2 top-2 z-50"
    >
      <Theme />
    </div> -->
    <div class="laptop:hidden fixed bottom-0 left-0 z-50 block w-full">
      <MenuMobile />
    </div>
  </body>
</html>
