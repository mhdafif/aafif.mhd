---
import "@/styles/globalOnePage.css";
import MenuMobile from "../Menu/MenuMobile.astro";
import Square from "./Square.astro";
import Footer from "@/modules/OnePage/Footer.astro";
const { title = "Mhd Afif" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
      rel="stylesheet"
    />

    <script>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body
    class="dark:bg-blacki bg-off-white text-black transition-all dark:text-off-white"
  >
    <main class="h-dvh flex flex-col relative">
      <Square />
      <div
        class="container h-full mx-auto relative place-content-center place-items-center"
      >
        <slot />
        <!-- <Footer /> -->

        <!-- <ScrollToTop /> -->
      </div>

      <div class="block laptop:hidden fixed bottom-0 left-0 z-50 w-full">
        <MenuMobile />
      </div>
    </main>
  </body>
</html>
