---
const { size = "large", text } = Astro.props;
let textSize = {
  text: "",
  textShadow: "",
};
switch (size) {
  case "large":
    textSize = {
      text: "text-3xl laptop:text-5xl",
      textShadow: "text-6xl laptop:text-7xl",
    };
    break;
  case "small":
    textSize = {
      text: "text-3xl",
      textShadow: "text-5xl",
    };
    break;

  default:
    break;
}
---

<h2
  class={`title font-bold text-star relative inline-block capitalize ${textSize.text}`}
>
  {text}
</h2>
<span class={textSize.textShadow}>{text}</span>

<style lang="scss">
  .title {
    z-index: 1;
    position: relative;

    &::before,
    &::after {
      content: "";
      position: absolute;
      height: 4px;
      bottom: -0.5rem;
      left: 0;
      border-radius: 2px;
    }
    &::before {
      width: 100%;
      background-color: rgba(250, 249, 246, 0.1);
    }
    &::after {
      width: 40%;
      background-color: rgba(250, 249, 246, 0.8);
    }
  }

  span {
    position: absolute;
    top: 28px;
    left: 14px;
    width: 100%;
    height: 100%;
    font-weight: bold;
    color: var(--color-charcoal);
  }
</style>
