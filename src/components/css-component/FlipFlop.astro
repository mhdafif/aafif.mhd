<div class="flip-flop w-14 h-14 border-4 border-star rounded-10">
</div>

<style>
  .flip-flop {
    position: relative;
    animation: flip-flop ease-in-out 2s infinite;
    box-shadow: 0 0 8px var(--color-star), 0 0 8px var(--color-star) inset;
  }

  @keyframes flip-flop {
    0% {
      transform: rotateX(0deg) rotateY(0deg) rotateZ(0deg);
    }
    33% {
      transform: rotateX(180deg) rotateY(0deg) rotateZ(0deg);
    }
    67% {
      transform: rotateX(180deg) rotateY(180deg) rotateZ(0deg);
    }
    100% {
      transform: rotateX(180deg) rotateY(180deg) rotateZ(180deg);
    }
  }
</style>
