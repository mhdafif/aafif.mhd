---

<div
  id="more-project"
  class="laptop:py-0 other-item rounded-5 bg-charcoal hover:bg-blacki hover:shadow-charcoal-glow hover:border-off-white/10 group relative flex h-full w-full cursor-pointer items-center justify-center overflow-hidden border border-solid border-transparent text-xl font-semibold transition-all duration-300 ease-out"
>
  <h2 class="capitalize">Project</h2>
  <div
    class="shortcut-key laptop:block bg-star text-blacki absolute top-0 left-1.5 z-[1] hidden rounded-b-xs px-1 text-sm font-medium transition-all duration-300 ease-out"
  >
    4
  </div>
  <div
    class="more-other bg-star rounded-5 absolute right-0 bottom-0 z-[1] flex w-fit -rotate-45 items-center justify-center px-4 py-0.5 transition-all duration-300 ease-out"
  >
    <Icon
      name="ic:baseline-open-in-new"
      class="text-blacki rotate-45 text-xl"
    />
  </div>
</div>

<Modal title="Project" modalId="modal-project">
  <div class="mt-6">
    <ul>
      {
        projects.map((project, index) => (
          <li class="project-item">
            <div class="project-content">
              <div>
                <h3 class="project-title">
                  <a
                    href={project.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-star"
                  >
                    {project.name}
                  </a>
                </h3>

                <div class="project-description">{project.description}</div>

                {project.tech.length && (
                  <ul class="project-tech-list">
                    {project.tech.map((tech, i) => (
                      <li class="bg-charcoal text-off-white hover:bg-star hover:!text-blacki rounded-5 cursor-default snap-start px-1.5 py-0.5 text-xs text-nowrap transition-colors duration-300 ease-out">
                        {tech}
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            </div>

            <div class="project-image aspect-video h-auto w-full overflow-hidden">
              <div class="carousel-wrapper">
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`carousel-img relative -top-10 grid !h-[120%] w-full scale-150 rotate-330 rotate-x-40 rotate-y-35 grid-cols-3 gap-3 overflow-hidden !bg-transparent ${index % 2 === 0 ? "laptop:left-[52px]" : "laptop:-left-[52px]"}`}
                >
                  <div class="carousel-column carousel-down col-span-2 flex flex-col gap-3">
                    {[...project.desktopImages, ...project.desktopImages].map(
                      (img, index) => (
                        <Image
                          src={img}
                          alt={`${project.name}_Desktop_${index + 1}`}
                          class="rounded-5 img w-full"
                        />
                      )
                    )}
                  </div>
                  <div
                    class={`carousel-column carousel-up flex flex-col gap-3 ${index % 2 === 0 ? "-order-1" : ""}`}
                  >
                    {project.mobileImages.map((img, index) => (
                      <Image
                        src={img}
                        alt={`${project.name}_Mobile_${index + 1}`}
                        class="rounded-5 img w-full"
                      />
                    ))}
                  </div>
                </a>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</Modal>

<script>
  const modalProject = document.getElementById("modal-project");
  const moreProject = document.getElementById("more-project");
  const closeProjectBtn = document.getElementById("modal-project-close");
  const modalContainer = modalProject.querySelector(".modal-container");
  const scrollToTop = document.getElementById("scrollToTop");

  function handleOpenModal(isOpen: boolean) {
    const anyModalOpen = document.querySelector(".modal.modal-open");
    const powerOff = window.sessionStorage.getItem("power") === "off";
    if (powerOff || (isOpen && anyModalOpen && anyModalOpen !== modalProject)) {
      return;
    }

    if (isOpen) {
      modalProject.classList.add("modal-open");
      scrollToTop.classList.add("hidden");
      document.body.style.overflow = "hidden";
    } else {
      modalContainer.scrollTo({ top: 0, behavior: "smooth" });
      modalProject.classList.remove("modal-open");
      scrollToTop.classList.remove("hidden");
      if (!document.querySelector(".modal.modal-open")) {
        document.body.style.overflow = "";
      }
    }
  }

  addEventListener("keydown", (event) => {
    if (event.key === "4") {
      handleOpenModal(true);
    }
    if (event.key === "Escape") {
      handleOpenModal(false);
    }
  });
  moreProject.addEventListener("click", () => {
    handleOpenModal(true);
  });
  closeProjectBtn.addEventListener("click", () => {
    handleOpenModal(false);
  });
  modalProject.addEventListener("click", (event: any) => {
    if (modalProject.classList.contains("modal-open")) {
      if (!modalContainer.contains(event.target)) {
        handleOpenModal(false);
      }
    }
  });
</script>

<style is:global lang="scss">
  li.project-item {
    position: relative;
    display: grid;
    gap: 10px;
    grid-template-columns: repeat(12, 1fr);
    align-items: center;

    &:not(:last-of-type) {
      margin-bottom: 80px;

      // tablet
      @media (max-width: 768px) {
        margin-bottom: 45px;
      }

      // mobile
      @media (max-width: 480px) {
        margin-bottom: 30px;
      }
    }

    &:nth-of-type(odd) {
      .project-content {
        grid-column: 7 / -1;
        text-align: right;

        @media (max-width: 1080px) {
          grid-column: 5 / -1;
        }
        @media (max-width: 768px) {
          grid-column: 1 / -1;
          padding: 40px 40px 30px;
          text-align: left;
        }
        @media (max-width: 480px) {
          padding: 25px 25px 20px;
        }
      }
      .project-tech-list {
        justify-content: flex-end;
        padding-left: 84px;
        padding-right: 0;

        @media (max-width: 768px) {
          padding: 0 !important;
          justify-content: flex-start;
        }

        li {
          margin: 0 0 5px 16px;

          @media (max-width: 768px) {
            margin: 0 10px 5px 0;
          }
        }
      }
      .project-links {
        justify-content: flex-end;
        // margin-left: 0;
        // margin-right: -10px;

        @media (max-width: 768px) {
          justify-content: flex-start;
          // margin-left: -10px;
          // margin-right: 0;
        }
      }
      .project-image {
        grid-column: 1 / 8;

        @media (max-width: 768px) {
          grid-column: 1 / -1;
        }
      }
    }

    .project-content {
      position: relative;
      grid-column: 1 / 7;
      grid-row: 1 / -1;

      @media (max-width: 1080px) {
        grid-column: 1 / 9;
      }

      @media (max-width: 768px) {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
        grid-column: 1 / -1;
        padding: 40px 40px 30px;
        z-index: 5;
      }

      @media (max-width: 480px) {
        padding: 30px 25px 20px;
      }
    }

    // .project-overline {
    //   margin: 10px 0;
    //   color: var(--color-star);
    //   font-size: 14px;
    //   font-weight: 400;
    // }

    .project-title {
      color: var(--color-off-white);
      font-size: clamp(24px, 5vw, 28px);

      @media (min-width: 768px) {
        margin: 0 0 20px;
      }

      @media (max-width: 768px) {
        a {
          position: static;

          &:before {
            content: "";
            display: block;
            position: absolute;
            z-index: 0;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
          }
        }
      }

      a {
        transition: color 0.2s ease-out;

        &:hover {
          color: var(--color-star);
        }
      }
    }

    .project-description {
      position: relative;
      z-index: 2;
      padding: 24px;
      border-radius: 4px;
      background-color: var(--color-charcoal);
      color: rgba(250, 249, 246, 0.8);
      font-size: 18px;

      @media (max-width: 768px) {
        padding: 20px 0;
        background-color: transparent;
        box-shadow: none;

        &:hover {
          box-shadow: none;
        }
      }
    }

    .project-tech-list {
      display: flex;
      flex-wrap: wrap;
      position: relative;
      z-index: 2;
      margin: 20px 0 10px;
      padding: 0;
      list-style: none;
      padding-right: 84px;

      li {
        margin: 0 20px 5px 0;
        color: rgba(250, 249, 246, 0.6);
        font-size: 13px;
        white-space: nowrap;
      }

      @media (max-width: 768px) {
        margin: 10px 0;
        padding: 0 !important;

        li {
          margin: 0 10px 5px 0;
          color: rgba(250, 249, 246, 0.6);
        }
      }
    }

    .project-links {
      display: flex;
      align-items: center;
      gap: 10px;
      position: relative;
      margin-top: 10px;
      // margin-left: -10px;
      color: rgba(250, 249, 246, 0.6);

      a {
        // padding: 10px;
        transition: all 0.3s ease-out;

        &.external {
          svg {
            width: 22px;
            height: 22px;
            margin-top: -4px;
          }
        }

        svg {
          width: 20px;
          height: 20px;
        }

        &:hover {
          color: var(--color-star);
          transform: translateY(-4px);
        }
      }

      .cta {
        // ${({ theme }) => theme.mixins.smallButton};
        margin: 10px;
      }
    }

    .project-image {
      box-shadow: 0 0 12px var(--color-charcoal);
      border-radius: 5px;
      grid-column: 6 / -1;
      grid-row: 1 / -1;
      position: relative;
      z-index: 1;

      @media (max-width: 768px) {
        grid-column: 1 / -1;
        height: 100%;
        opacity: 0.25;
      }

      a {
        width: 100%;
        height: 100%;
        background-color: var(--color-star);
        border-radius: 5px;
        vertical-align: middle;

        &:hover,
        &:focus {
          background: transparent;
          outline: 0;

          &:before,
          .img {
            background: transparent;
            filter: none;
          }
        }

        &:before {
          content: "";
          position: absolute;
          width: 100%;
          height: 100%;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          z-index: 3;
          transition: all 0.3s ease-out;
          background-color: var(--color-charcoal);
          mix-blend-mode: screen;
          border-radius: 5px;
        }
      }

      .img {
        border-radius: 5px;
        mix-blend-mode: multiply;
        filter: grayscale(100%) contrast(1) brightness(90%);

        @media (max-width: 768px) {
          object-fit: cover;
          width: auto;
          height: 100%;
          filter: grayscale(100%) contrast(1) brightness(50%);
        }
      }
    }
  }

  .carousel-wrapper {
    position: relative;
    height: 100%;
    overflow: hidden;
  }

  /* Add fade effects to top and bottom */
  .carousel-wrapper::before {
    content: "";
    background: linear-gradient(
      0deg,
      transparent 0%,
      var(--color-bg-primary, rgba(0, 0, 0, 0.75)) 100%
    );
    height: 20%;
    position: absolute;
    top: -2px;
    left: -180px;
    right: -180px;
    pointer-events: none;
    z-index: 10;
  }

  .carousel-wrapper::after {
    content: "";
    background: linear-gradient(
      180deg,
      transparent 0%,
      var(--color-bg-primary, rgba(0, 0, 0, 0.75)) 100%
    );
    height: 20%;
    position: absolute;
    bottom: -2px;
    left: -180px;
    right: -180px;
    pointer-events: none;
    z-index: 10;
  }

  .carousel-img {
    height: 300px; /* Fixed height for proper overflow */
    position: relative;
  }

  .carousel-column {
    animation-duration: 15s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    will-change: transform;
  }

  .carousel-column.carousel-mobile {
    animation-duration: 20s;
  }

  .carousel-up {
    animation-name: scrollUp;
  }

  .carousel-down {
    animation-name: scrollDown;
  }

  .carousel-img:hover .carousel-column {
    animation-play-state: paused;
  }

  .img-container {
    transform: rotateX(47deg) rotateY(31deg) rotate(324deg);
  }

  @keyframes scrollUp {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-50%);
    }
  }

  @keyframes scrollDown {
    0% {
      transform: translateY(-50%);
    }
    100% {
      transform: translateY(0);
    }
  }
</style>
