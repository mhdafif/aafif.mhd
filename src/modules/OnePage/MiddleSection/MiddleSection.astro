---
import Location from "./Location.astro";
import Email from "./Email.astro";
import Profile2 from "./Profile2.astro";
---

<section class="flex flex-col gap-3">
  <Profile2 />
  <div class="grid grid-cols-3 relative">
    <div class="email-box col-span-2">
      <Email />
    </div>
    <div class="email-line line"></div>
  </div>
  <div class="grid grid-cols-3 relative">
    <div class="location-box col-span-2 order-2 relative">
      <Location />
    </div>
    <div class="location-line line"></div>
  </div>
</section>

<style lang="scss">
  .email-box:hover ~ .email-line,
  .location-box:hover ~ .location-line {
    &::after {
      border-color: var(--color-star);
    }
  }
  .line {
    position: relative;
    &::after {
      content: "";
      width: 50%;
      height: 70%;
      position: absolute;
      border-width: 2px;
      border-style: dashed;
      border-color: var(--color-blacki);
      transition: all 0.3s ease-in-out;
    }
  }
  .email-line {
    &::after {
      top: 50%;
      border-left: 0;
      border-bottom: 0;
      border-top-right-radius: 4px;
    }
  }
  .location-line {
    &::after {
      bottom: 50%;
      right: 0;
      border-right: 0;
      border-top: 0;
      border-bottom-left-radius: 4px;
    }
  }
</style>
