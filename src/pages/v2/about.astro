---
import Layout from "@/components/Layout/Layout-v2.astro";
import MenuMini from "@/components/v2/Menu/MenuMini.astro";
import Profile from "@/components/v2/Profile.astro";
import Education from "@/modules/About/Education.astro";
import Introduction from "@/modules/About/Introduction.astro";
import Skills from "@/modules/About/Skills.astro";
import Testimony from "@/modules/About/Testimony.astro";
---

<Layout title="About">
  <div class="laptop:grid-cols-3 laptop:gap-5 grid w-full">
    <div class="laptop:sticky top-5 col-span-1 h-fit space-y-5 overflow-hidden">
      <div class="laptop:block hidden">
        <MenuMini />
      </div>

      <Profile />
    </div>

    <div class="laptop:col-span-2 col-span-1 space-y-5">
      <Introduction />
      <Skills />
      <Education />
      <Testimony />
    </div>
  </div>
</Layout>
