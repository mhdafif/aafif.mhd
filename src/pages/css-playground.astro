---
import BorderRotating from "@/components/css-component/BorderRotating.astro";
import BorderRotating2 from "@/components/css-component/BorderRotating2.astro";
import BouncingText from "@/components/css-component/BouncingText.astro";
import ClipPath from "@/components/css-component/ClipPath.astro";
import FlipFlop from "@/components/css-component/FlipFlop.astro";
import Layer from "@/components/css-component/Layer.astro";
import RandomText from "@/components/css-component/RandomText.astro";
import Rotate from "@/components/css-component/Rotate2.astro";
import TypeWriter from "@/components/css-component/TypeWriter.astro";
import TypeWriter2 from "@/components/css-component/TypeWriter2.astro";
import Layout from "@/components/Layout/Layout.astro";
---

<Layout>
  <div>
    <div class="grid laptop:grid-cols-4 gap-4">
      <div class="card place-content-start place-items-center">
        <h2 class="text-2xl font-semibold text-off-white mb-6">
          Border Rotating
        </h2>
        <BorderRotating />
      </div>
      <div class="card z-[-1] place-content-start place-items-center">
        <h2 class="text-2xl font-semibold text-off-white mb-6">
          Border Rotating 2
        </h2>
        <BorderRotating2 />
      </div>

      <div class="card place-content-start place-items-center">
        <h2 class="text-2xl font-semibold text-off-white mb-6">
          Bouncing Text
        </h2>
        <BouncingText />
      </div>

      <div class="card place-content-start place-items-center">
        <h2 class="text-2xl font-semibold text-off-white mb-6">Flip Flop</h2>
        <FlipFlop />
      </div>

      <div class="card place-content-start place-items-center">
        <h2 class="text-2xl font-semibold text-off-white mb-16">Layer</h2>
        <Layer />
      </div>

      <div class="card place-content-start place-items-center">
        <h2 class="text-2xl font-semibold text-off-white mb-16">Random Text</h2>
        <RandomText />
      </div>

      <div class="card place-content-start place-items-center">
        <h2 class="text-2xl font-semibold text-off-white mb-16">
          Typewriter Text
        </h2>
        <TypeWriter />
      </div>

      <div class="card place-content-start place-items-center">
        <h2 class="text-2xl font-semibold text-off-white mb-16">
          Typewriter 2 Text
        </h2>
        <TypeWriter2 />
      </div>

      <div class="card place-content-start place-items-center">
        <h2 class="text-2xl font-semibold text-off-white mb-16">Rotate</h2>
        <Rotate />
      </div>

      <div class="card place-content-start place-items-center">
        <h2 class="text-2xl font-semibold text-off-white mb-16">Clip Path</h2>
        <ClipPath />
      </div>
    </div>
  </div>
</Layout>
