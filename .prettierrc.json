{
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "jsxSingleQuote": false,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "vueIndentScriptAndStyle": false,
  "printWidth": 80,

  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^[./]",
    "^@/assets/(.*)$",
    "^@/components/(.*)$",
    "^@/config/(.*)$",
    "^@/helper/(.*)$",
    "^@/locales/(.*)$",
    "^@/modules/(.*)$",
    "^@/pages/(.*)$",
    "^@/router/(.*)$",
    "^@/services/(.*)$",
    "^@/store/(.*)$",
    "^@/styles/(.*)$",
    "^@/typings/(.*)$",
    "^@/utils/(.*)$",
    "^@/variables/(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
